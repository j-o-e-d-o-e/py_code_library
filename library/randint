random.randint()

random integers

EXAMPLE
# Generates a number from 1 through 10 inclusive
from random import randint

random_number = randint(1, 10)
print (random_number)
guesses_left = 3

while guesses_left > 0:
    guess = int(raw_input("Your guess: "))
    if guess==random_number:
        print ("You win!")
        break
    guesses_left-=1
else:
    print ("You lose.")